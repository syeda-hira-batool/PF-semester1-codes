#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    char key = 5;  
    int i;

    printf("Enter a string to encrypt: ");
    fgets(str, sizeof(str), stdin);  

    str[strcspn(str, "\n")] = '\0';

 
    for(i = 0; str[i] != '\0'; i++) {
        str[i] = str[i] ^ key;
    }
    printf("Encrypted string: %s\n", str);

    for(i = 0; str[i] != '\0'; i++) {
        str[i] = str[i] ^ key;
    }
    printf("Decrypted string: %s\n", str);

    return 0;
}
